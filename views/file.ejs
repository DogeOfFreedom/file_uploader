<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="../style.css" />
    <script
      src="https://kit.fontawesome.com/efd0a1c1d1.js"
      crossorigin="anonymous"
    ></script>
    <title>File Uploader</title>
  </head>
  <body>
    <%- include("./partials/header") %>
    <div class="contentContainer">
      <div class="card">
        <img src="<%=locals.file.url%>" alt="preview_img" />
        <div class="infoSegment">
          <span class="infoTitle">Filename</span>
          <span class="infoData"><%= locals.file.filename %></span>
        </div>
        <div class="infoSegment">
          <span class="infoTitle">Size</span>
          <span class="infoData"><%= locals.file.size %></span>
        </div>
        <div class="infoSegment">
          <span class="infoTitle">Creation Date</span>
          <span class="infoData"><%= locals.file.createdAt %></span>
        </div>
        <div class="fileButtons">
          <a
            tabindex="-1"
            href="/files<%=`?folderId=${locals.file.folderId}`%>"
            class="fileBackBtn"
          >
            <%- include('./partials/backButton') %>
          </a>
          <a href="/files/file/download?fileId=<%= locals.file.id %>">
            <button class="borderTransition actionBtn">Download</button>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
