<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>File Uploader</title>
  </head>
  <body>
    <h1>Sign Up</h1>
    <form method="POST" action="/signup">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" value="<%= locals.username ? locals.username : ''  %>" />
      <label for="Password">Password</label>
      <input type="password" name="password" id="password" value="<%= locals.password ? locals.password : ''  %>" />
      <label for="confirmPassword">Confirm Password</label>
      <input type="password" name="confirmPassword" id="confirmPassword" value="<%= locals.confirmPassword ? locals.confirmPassword : ''  %>" />
      <% if (locals.error) { %>
        <p><%= locals.error %></p>  
      <% } %>
      <button type="submit">Submit</button>
      <p>Already have an account? <a href="/login">Login</a></p>
    </form>
  </body>
</html>
